<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="pimgento_product_model_link" resource="default" comment="Links product ids to the akeneo model they originate from">
        <column xsi:type="int" name="product_id" identity="true" comment="Product id" />
        <column xsi:type="varchar" name="model" length="1024" nullable="false" comment="Model code" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="product_id" />
        </constraint>
    </table>
</schema>
